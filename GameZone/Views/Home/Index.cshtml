@using Microsoft.Extensions.Options
@model IEnumerable<Game>
@inject IOptions<FileConfiguration> FileConfig

@{
    ViewData["Title"] = "Home Page";
}

@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning">
        <h4 class="alert-heading">NO GAMES!</h4>
        <p class="mb-0">NO GAMES WERE ADDED YET.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
            <a class="col-lg-4 col-md-6 text-decoration-none" asp-controller="Games" asp-action="Details"
                asp-route-id="@game.Id">
                <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
                    <div class="card-body"
                        style="background-image: url(@($"{FileConfig.Value.ImagePath}/{game.Cover}")); background-size: cover; background-position: center; height: 450px;">
                        <div class="h-100 d-flex align-items-end fs-3">
                            <span class="badge bg-danger">@game.Category.Name</span>
                        </div>
                    </div>
                    <div class="card-footer d-flex flex-column justify-content-center text-center">
                        <h5 class="text-truncate">@game.Name</h5>
                        <div>
                            @foreach (var device in game.GameDevices)
                            {
                                <i class="@device.Device.Icon fs-4 me-2 mt-1"></i>
                            }
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
}