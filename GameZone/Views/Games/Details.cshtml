@model Game
@inject IOptions<FileConfiguration> FileConfig

@{
    ViewData["Title"] = Model.Name;
}

<div class="card border border-primary rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 p-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-dark fw-bolder">@Model.Name</h1>
                    <span class="badge bg-danger fs-5 mb-4">@Model.Category.Name</span>
                    <p class="fs-5 text-dark">@Model.Description</p>
                </div>
                <div>
                    @foreach (var device in Model.GameDevices)
                    {
                        <i class="@device.Device.Icon fs-4 me-2 mt-1 text-primary"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileConfig.Value.ImagePath}/{Model.Cover}")" alt="@Model.Name" class="w-100">
            </div>
        </div>
    </div>
</div>