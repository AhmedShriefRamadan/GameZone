@using Microsoft.Extensions.Options
@model CreateGameFormViewModel
@inject IOptions<FileConfiguration> FileConfig

@{
    ViewData["Title"] = "Add new game";
}

<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add Game
</h5>

<form asp-controller="Games" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter the Game Name">
                <span asp-validation-for="Name" class="text-red"></span>
            </div>

            <div>
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option value="">Select a category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-red"></span>
            </div>

            <div>
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select multiple="" class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices">
                    <option>Select supported devices</option>
                </select>
                <span asp-validation-for="SelectedDevices" class="text-red"></span>
            </div>

            <div>
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-red"></span>
            </div>

            <div>
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover">
                <small class="form-text text-muted">Only @string.Join(", ", FileConfig.Value.AllowedExtensions) files
                    are allowed with max size @(FileConfig.Value.MaxFileSizeInMB)MB.</small>
                <span asp-validation-for="Cover" class="text-red d-block"></span>
            </div>

            <button type="submit" class="btn btn-light mt-3">Save</button>
        </div>
        <div class="col-md-6"></div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
