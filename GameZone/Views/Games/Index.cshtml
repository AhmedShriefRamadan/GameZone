@using Microsoft.Extensions.Options
@model IEnumerable<Game>
@inject IOptions<FileConfiguration> FileConfig

@{
    ViewData["Title"] = "Games";
}

<a class="btn btn-secondary btn-lg mb-3" asp-action="Create">
    <i class="bi bi-plus-circle-dotted"></i>
    Add Game
</a>

@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning">
        <h4 class="alert-heading">NO GAMES!</h4>
        <p class="mb-0">NO GAMES WERE ADDED YET.</p>
    </div>
}
else
{
    <table class="table table-hover">
        <tbody>
            @foreach (var game in Model)
            {
                <tr class="table-dark">
                    <th scope="row" class="d-flex">
                        <img src="@($"{FileConfig.Value.ImagePath}/{game.Cover}")" alt="@game.Name" style="max-width: 100px;"
                            class="pe-4">
                        <div class="d-flex flex-column justify-content-center">
                            <h4 class="text-light">@game.Name</h4>
                            <span class="badge bg-danger" style="max-width: 80px;">@game.Category.Name</span>
                        </div>
                    </th>
                    <td>
                        <div class="align-middle d-flex justify-content-end align-items-center">
                            <a class="btn rounded rounded-3 me-2" asp-action="Update" asp-route-id="@game.Id">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a class="btn rounded rounded-3 me-2 delete-game" data-id="@game.Id">
                                <i class="bi bi-trash-fill fs-2 text-red"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="/js/game-delete.js"></script>
}